<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/listing_circle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="90dp">

            <ImageView
                android:id="@+id/listing_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder1" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/listing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/listing_circle"
            android:fontFamily="@font/poppins_regular"
            android:text="Stroller"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/listing_description"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/listing_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/listing_circle"
            android:fontFamily="@font/poppins_light"
            android:text="Barely used stroller, like new, comes with an extra bag and replaceable wheels" />

        <ImageView
            android:id="@+id/listing_price_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/listing_title"
            android:background="@drawable/tag" />

        <TextView
            android:id="@+id/listing_price"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/listing_price_tag"
            android:fontFamily="@font/poppins_light"
            android:text="$80" />

        <ImageView
            android:id="@+id/listing_owner_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/listing_price_tag"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/listing_title"
            android:background="@drawable/user" />

        <TextView
            android:id="@+id/listing_owner"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/listing_price"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/listing_owner_icon"
            android:fontFamily="@font/poppins_light"
            android:text="Johnny" />

        <ImageView
            android:id="@+id/listing_date_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/listing_owner_icon"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/listing_title"
            android:background="@drawable/calendar" />

        <TextView
            android:id="@+id/listing_date"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/listing_owner"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/listing_date_icon"
            android:fontFamily="@font/poppins_light"
            android:text="04/24/2022"
            android:textSize="10sp" />


        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/seperator"
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_below="@id/listing_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/seperator_line" />


    </RelativeLayout>

</RelativeLayout>