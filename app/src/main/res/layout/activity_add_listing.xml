<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddListingActivity">

    <TextView
        android:id="@+id/tx_new_listing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="New Listing"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/listing_circle"
        app:cardCornerRadius="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tx_new_listing"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listing_pic"
            android:scaleType="centerCrop"
            android:src="@drawable/no_listing_picture"/>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/listing_circle"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_bg">


        <EditText
            android:id="@+id/title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:hint="Title"
            android:textColor="@color/gray"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/description_bar"
        android:layout_width="300dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_bg">


        <EditText
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:hint="Description"
            android:textColor="@color/gray"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/price_bar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="56dp"
        android:layout_below="@id/description_bar"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_bg">


        <EditText
            android:id="@+id/price_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:hint="Price"
            android:textColor="@color/gray"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner_categories"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/description_bar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/price_bar"
        android:background="@drawable/search_bg" />

    <RelativeLayout
        android:id="@+id/btn_add_new"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/category_card_blue"
        android:layout_below="@id/price_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Add listing"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>



</RelativeLayout>