<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_picture_container"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="90dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/card_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/no_listing_picture"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/listing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_picture_container"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Title"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/card_description"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/listing_title"
            android:layout_toEndOf="@id/card_picture_container"
            android:layout_marginStart="10dp"
            android:text="Description"
            android:fontFamily="@font/poppins_light"/>

        <ImageView
            android:id="@+id/card_price_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="265dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/tag" />

        <TextView
            android:id="@+id/card_price_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/card_price_icon"
            android:fontFamily="@font/poppins_light"
            android:text="$ Price"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/card_date_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="265dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/calendar" />

        <TextView
            android:id="@+id/card_date_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/card_date_icon"
            android:fontFamily="@font/poppins_light"
            android:text="Date"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/card_btn_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/settings" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/card_seperator"
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/seperator_line" />



    </RelativeLayout>

</RelativeLayout>