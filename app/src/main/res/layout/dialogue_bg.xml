<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tx_enter_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_regular"
        android:text="Enter old password"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/tx_enter_old"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/search_bg">

        <EditText
            android:id="@+id/et_old_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:hint="Old password"
            android:inputType="textPassword" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tx_enter_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_enter_old"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Enter new password"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/tx_enter_new"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/search_bg">

        <EditText
            android:id="@+id/et_new_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:hint="New password"
            android:inputType="textPassword" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_cancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/tx_enter_new"
        android:layout_marginTop="100dp"
        android:background="@drawable/dialogue_btn_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_regular"
            android:text="Cancel" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_save_new_password"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/tx_enter_new"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@id/btn_cancel"
        android:background="@drawable/dialogue_btn_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_regular"
            android:text="Save password" />
    </RelativeLayout>

</RelativeLayout>