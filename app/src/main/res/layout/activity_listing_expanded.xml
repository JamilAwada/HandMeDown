<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListingExpanded">

    <TextView
        android:id="@+id/tx_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="HandMeDown"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/listing_circle"
        app:cardCornerRadius="90dp"
        android:layout_below="@id/tx_brand"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp">

        <ImageView
            android:id="@+id/listing_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/no_listing_picture" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/listing_circle"
        android:layout_below="@id/tx_brand"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/search_bg">


        <TextView
            android:id="@+id/title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:hint="Title"
            android:textColor="@color/gray"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/description_bar"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/listing_circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/search_bg">


        <TextView
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:hint="Description"
            android:textColor="@color/gray"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/price_bar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/title_bar"
        android:layout_toEndOf="@id/listing_circle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/search_bg">


        <TextView
            android:id="@+id/price_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:hint="Price"
            android:textColor="@color/gray"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/btn_return"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/right_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tx_seller_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_bar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Seller"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/seller_circle"
        app:cardCornerRadius="90dp"
        android:layout_below="@id/tx_seller_info"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp">

        <ImageView
            android:id="@+id/seller_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/no_picture" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_seller_info"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/seller_circle"
        android:fontFamily="@font/poppins_regular"
        android:text="Seller Name" />

    <TextView
        android:id="@+id/seller_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/seller_circle"
        android:text="Seller Address"
        android:fontFamily="@font/poppins_regular"
        android:layout_below="@id/seller_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/btn_call"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/tx_seller_info"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="126dp"
        android:src="@drawable/call_phone" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_seller_info"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="Phone number" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/calendar"
        android:layout_below="@id/btn_call"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="125dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/posted_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="24/05/2002" />

</RelativeLayout>