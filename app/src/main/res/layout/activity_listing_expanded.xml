<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListingExpanded">

    <TextView
        android:id="@+id/tx_edit_listing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="HandMeDown"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="32sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_picture_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="90dp"
        android:layout_below="@id/tx_edit_listing"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp">

        <ImageView
            android:id="@+id/card_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/no_listing_picture"/>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/bar_title"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/card_picture_container"
        android:layout_below="@id/tx_edit_listing"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/search_bg">

        <TextView
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:hint="Title"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/gray"
            android:background="@android:color/transparent"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bar_price"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/bar_title"
        android:layout_toEndOf="@id/card_picture_container"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/search_bg">

        <TextView
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:hint="Price"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/gray"
            android:background="@android:color/transparent"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bar_description"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/card_picture_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/search_bg">

        <TextView
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:hint="Description"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/gray"
            android:background="@android:color/transparent"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/btn_return"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/right_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tx_seller_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar_description"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Seller"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_seller_picture_container"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="90dp"
        android:layout_below="@id/tx_seller_info"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp">

        <ImageView
            android:id="@+id/card_seller_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/no_picture"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tx_seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_seller_info"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/card_seller_picture_container"
        android:text="Seller Name"
        android:fontFamily="@font/poppins_regular"/>

    <TextView
        android:id="@+id/tx_seller_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/card_seller_picture_container"
        android:layout_below="@id/tx_seller_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Seller Address"
        android:fontFamily="@font/poppins_regular"/>

    <ImageView
        android:id="@+id/btn_call"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/tx_seller_info"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="126dp"
        android:src="@drawable/call_phone"/>

    <TextView
        android:id="@+id/tx_seller_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_seller_info"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="Phone number"/>

    <ImageView
        android:id="@+id/image_date"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/btn_call"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="125dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/calendar"/>

    <TextView
        android:id="@+id/posted_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_seller_number"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="Date"/>

</RelativeLayout>